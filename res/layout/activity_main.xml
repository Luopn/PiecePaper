<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#07000000"
        android:orientation="horizontal" >

        <com.example.piecepaper.utils.CircleImageView
            android:id="@+id/my_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp" />

        <RadioGroup
            android:id="@+id/radiogroup_main"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/bt_hot"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_foco_hot"
                android:button="@null"
                android:gravity="center"
                android:text="热门"
                android:textColor="@drawable/selector_radiobtn" />

            <RadioButton
                android:id="@+id/bt_new"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_foco_hot"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="最新"
                android:textColor="@drawable/selector_radiobtn" />
        </RadioGroup>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/sub_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal" 
        android:background="#20000000"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <EditText
            android:id="@+id/to_editmsg"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center" 
            android:background="#ffffff"
            android:focusable="false"
            android:hint="一起随手分享"
            android:textSize="12sp"/>
    </LinearLayout>

</LinearLayout>